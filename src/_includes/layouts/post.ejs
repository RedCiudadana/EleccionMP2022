---
layout: layouts/base.ejs
---
<!--ANUNCIO-->
<div class="max-w-screen-lg mx-auto ">
  <div class="grid grid-cols-4">
    <div class="col-span-full mt-6">
      <img src="/assets/images/iconos/ELECCION-MP.gif" alt="funny GIF" width="100%">
    </div>
    
  </div>
</div>
<!--POST-->
<div class="max-w-screen-lg mx-auto " style="margin:3rem auto; padding:0 2rem">
  <div class="grid grid-cols-4">
    <div class="col-span-full">
      <article>
        <header>
          <h1 class=" font-bold text-4xl text-gray-800">
            <%= title %>
          </h1>
          <br>
          <h6 class=" font-bold text-1xl text-gray-800">
            <%= description %>
          </h6>

          <div class=" text-sm mb-8">
            <% this.dateFns.format(new Date(date), 'dd/MM/yyyy' , { locale: this.es }) %>
          </div>
          <!--div class="text-center text-sm text-gray-600 mb-6">
            Categoria:
            <% if (locals.tags) { %>
              <% tags.forEach((tag)=> { %>
                < Don't show hidden tag >
                <% if (tag !=='posts' ) { %>
                  < /<%= tag.toLowerCase() %> >
                  <span class="text-sm font-semibold text-gray-900 uppercase ml-2">
                    <%= tag %>
                  </span>
                <% } %>
              <% }) %>
            <% } %>
          </div-->

          <div class=" text-sm text-gray-600 mb-6">
            Autor:
              <span class="text-sm font-semibold text-gray-900 ml-2">
                <%= (typeof autor != "undefined" ? autor : "") %> | <%= (typeof correo != "undefined" ? correo : "") %> | <% this.dateFns.format(new Date(), 'dd/MM/yyyy' , { locale: this.es }) %>
              </span>
          </div>
        </header>
        
        <section class="content text-justify">
          <div class="grid grid-cols-6">
            <div class="col-span-6 md:col-span-4 ">
              <%- content %>
            </div>
            <div class="col-span-6 md:col-span-2 p-6">
              <h6>Escucha nuestros podcasts</h6>
              <div class="w-full">
                <% if (collections['Podcast']) { %>
                  <% collections['Podcast'].slice(-4).reverse().forEach((podcast)=> { %>
                    <div class="block mb-4">
                      <iframe src="<%= podcast.data.link %>" width="100%"
                        height="152" frameBorder="0" allowfullscreen="" class="rifra"
                        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
                    </div>
                  <% }) %>
                <% } %>
              </div>
            </div>  
          </div>

        </section>
        
      </article>
    </div>
    <div class="col-span-full mt-6">
      <h2 class="font-bold text-xl border-b-2 border-yellow-500 mb-4 pb-4">MÃ¡s publicaciones</h2>
      <ul>
        <% if (locals.tags) { %>
          <% tags.forEach((tag)=> { %>
            <% if (tag !=='posts') { %>
              <% collections[tag].slice(0,4).forEach((post)=> { %>
                <% if (locals.page.url !== post.url) { %>
                  <li class="mb-3 block justify-between">
                    <a href="<%= post.url %>" class="flex border-b-2 pb-4 mb-4 text-current">
                      <img src="<%= post.data.image %>" alt="Evento" class="w-36">
                      <div class="pl-8 my-auto">
                        <h5 class="font-bold text-lg">
                          <%= post.data.title %>
                        </h5>
                        <span class="text-sm">
                          <%= post.data.description %>
                        </span>
                      </div>
                    </a>
                  </li>
                <% } %>
              <% }) %>
            <% } %>
          <% }) %>
        <% } %>
      </ul>
    </div>
  </div>
</div>
